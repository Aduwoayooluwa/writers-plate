---
import SaveButton from "./SaveButton.astro";

---
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<main class="grid place-items-center">
    <section class="bg-white lg:w-[800px]  my-3 px-3 py-4 flex items-center justify-evenly w-full h-[40px]">
        <span class="cursor-pointer material-symbols-outlined">
            format_bold
        </span>

        <span class="cursor-pointer material-symbols-outlined">
            format_italic
            </span>
        
        <span class="cursor-pointer material-symbols-outlined">
            format_underlined
        </span>

        <span class="cursor-pointer material-symbols-outlined">
            format_list_bulleted
        </span>
    
        <span class="cursor-pointer material-symbols-outlined">
            format_list_numbered
        </span>
    
        <span class="cursor-pointer material-symbols-outlined">
            format_align_left
        </span>
    
        <span class="cursor-pointer material-symbols-outlined">
            format_align_left
        </span>
    
        <span class="cursor-pointer material-symbols-outlined">
            format_align_left
        </span>
    
        <span class="cursor-pointer material-symbols-outlined">
            format_align_right
        </span>


    </section>
    <textarea class="w-full lg:w-[800px] h-[600px] outline-none focus:outline-purple-300">

    </textarea>
    <SaveButton />
</main>
